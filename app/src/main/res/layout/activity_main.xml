<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.meghnadsaha.bankaccount2.MainActivity">


    <TextView
        android:text="Data Goes Here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="71dp"
        android:id="@+id/tvData" />

    <Button
        android:text="Save Prfererence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:id="@+id/btnsaveExternal"
        android:layout_below="@+id/tvData"
        android:layout_alignLeft="@+id/tvData"
        android:layout_alignStart="@+id/tvData" />

    <Button
        android:text="Load Prfererence"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/btnLoadPrfererence"
        android:layout_below="@+id/btnsaveExternal"
        android:layout_alignLeft="@+id/btnsaveExternal"
        android:layout_alignStart="@+id/btnsaveExternal" />
</RelativeLayout>
